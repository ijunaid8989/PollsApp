<div class="container topical">
	<div class="col-xs-6">
		<%= form_for @poll do |f| -%>
			<div class="form-group">
				<%= f.text_field :title , placeholder: "Title", class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.submit "Create", class: "btn btn-success" %>
			</div>
		<% end -%>
	</div>
</div>

<h1>All Polls</h1>
<ul class="list-group">
	<% @polls.each do |poll| %>
	  <li class="list-group-item">
		    <span class="badge"><%= link_to "show" , poll_path(poll) %></span>
		    <span class="badge"><%= link_to "edit" , edit_poll_path(poll) %></span>
		    <span class="badge"><%= link_to "delete", poll , method: :delete , data: {confirm: "Are you sure about this?"} %></span>
		    <span class="badge"><%= link_to "Add Question" , new_poll_question_path(poll) %></span>
		    <%= poll.title %>
	  </li>
  <% end -%>
</ul>
<h2>All Questions</h2>
<div class="panel panel-default topical">
<%= @questions.each do |question| %>
  <div class="panel-body">
    <%= @question.title %>
    <%= @question.kind %>
    <%= @question.poll_id %>
  </div>
<% end -%>
</div>